rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TEMPORARY: Allow all authenticated users full access to all collections
    // Role-based access control will be implemented later
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // ---- Users ----
    match /users/{userId} {
      allow read, create, update: if isAuthenticated();
      allow delete: if false;
    }

    // ---- Messages ----
    match /messages/{messageId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }

    // ---- Audit Logs ----
    match /audit_logs/{logId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }

    // ---- Tender Drafts ----
    match /drafts/{userId} {
      allow read, write, create, update, delete: if isAuthenticated();
      
      match /tenderDrafts/{draftId} {
        allow read, write, create, update, delete: if isAuthenticated();
      }
    }

    // ---- Counters ----
    match /_counters/{counterId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }

    // ---- Tenders & Rate Analysis ----
    match /tenders/{tenderId} {
      allow read, write, create, update, delete: if isAuthenticated();
      
      match /rateAnalysis/{raId} {
        allow read, write, create, update, delete: if isAuthenticated();
      }

      match /documents/{docId} {
        allow read, write, create, update, delete: if isAuthenticated();
      }

      match /statusHistory/{historyId} {
        allow read, write, create, update, delete: if isAuthenticated();
      }

      match /boqItems/{fileId} {
        allow read, write, create, update, delete: if isAuthenticated();
        
        match /chunks/{chunkId} {
          allow read, write, create, update, delete: if isAuthenticated();
        }
      }
    }

    // ---- Escalation Bill Module ----
    match /escalation_masters/{masterId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }

    match /price_indices/{indexId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }

    match /escalation_bills/{billId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }

    // ---- Daily Work Status Module ----
    match /dws_projects/{projectId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }

    match /dws_personnel/{personnelId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }

    match /dws_statuses/{statusId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }

    match /dws_entries/{entryId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }

    match /dws_users/{userId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }

    // ---- Rate Analysis Sub-Modules ----
    match /masterRateData/{itemId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }

    // ---- DSR (Detailed Schedule of Rates) Module ----
    match /dsr_projects/{projectId} {
      allow read, write, create, update, delete: if isAuthenticated();
      
      match /boq_uploads/{uploadId} {
        allow read, write, create, update, delete: if isAuthenticated();
      }
      
      match /recap_sheets/{recapId} {
        allow read, write, create, update, delete: if isAuthenticated();
      }
      
      match /summary_sheets/{summaryId} {
        allow read, write, create, update, delete: if isAuthenticated();
      }
      
      match /abstract_sheets/{abstractId} {
        allow read, write, create, update, delete: if isAuthenticated();
      }
      
      match /measurement_sheets/{measurementId} {
        allow read, write, create, update, delete: if isAuthenticated();
      }
      
      match /rate_analysis/{analysisId} {
        allow read, write, create, update, delete: if isAuthenticated();
      }
      
      match /lead_charts/{chartId} {
        allow read, write, create, update, delete: if isAuthenticated();
      }
      
      match /final_boq/{finalBOQId} {
        allow read, write, create, update, delete: if isAuthenticated();
      }
      
      match /file_operations/{operationId} {
        allow read, write, create, update, delete: if isAuthenticated();
      }
    }

    // ---- App Settings ----
    match /appSettings/{settingId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }

    // ---- Mail Collection ----
    match /mail/{mailId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }

    // Catch-all: Allow authenticated users access to everything else
    match /{document=**} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
  }
}
