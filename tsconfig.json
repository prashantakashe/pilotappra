{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": [
      "react",
      "react-native",
      "node"
    ]
  },
  "include": [
    "src",
    "App.tsx"
  ],
  "exclude": [
    "**/__tests__",
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
